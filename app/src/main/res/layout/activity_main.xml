<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".MainActivity" android:id="@+id/main_framelayout"
>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/Navigationb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/colorNIGHTgrey"
            app:itemIconTint="@color/TextColorInPLaces"
            app:itemTextColor="@color/TextColorInPLaces"
            app:menu="@menu/navigation"
            android:theme="@style/AppTheme"
            app:labelVisibilityMode="unlabeled"
            android:visibility="visible"
    >

    </android.support.design.widget.BottomNavigationView>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_user"
            android:background="@color/colorPrimary"
    >

        <ImageView
                android:layout_width="match_parent"
                android:layout_gravity="top|center"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content"
                android:tint="@color/TextColorInPLaces"
                app:srcCompat="@drawable/poloska_dlya_okon"
                android:id="@+id/poloska"
        />

        <ImageButton
                android:scaleType="fitXY"
                android:layout_width="320dp"
                android:layout_height="84dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="315dp"
                app:srcCompat="@drawable/history_btn_ico_for_user"
                android:background="@color/colorPrimary"
                android:id="@+id/HistoryButton"
        />

        <ImageButton
                android:scaleType="fitXY"
                android:layout_width="320dp"
                android:layout_height="84dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="220dp"
                app:srcCompat="@drawable/btn_favorite_ico"
                android:background="@color/colorPrimary"
                android:id="@+id/favoriteBtn"
        />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ico_for_user_layout"
                android:id="@+id/imageView"
                android:tint="@color/TextColorInPLaces"
                android:layout_gravity="top|center"
                android:layout_marginTop="81dp"
        />

        <ImageButton
                android:layout_width="203dp"
                android:layout_height="54dp"
                android:id="@+id/btn_sign_out"
                android:background="@color/colorPrimary"
                android:layout_marginTop="454dp"
                android:layout_gravity="top|center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btn_exit"
        />

        <ImageButton
                android:scaleType="fitXY"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:id="@+id/change_data"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/rename_ico"
                android:layout_gravity="top|end"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/nameUser"
                android:textSize="18sp"
                android:fontFamily="Montserrat"
                style="Bold"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="126dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/name_bcak_ico"
                android:layout_gravity="top"
                android:textStyle="bold"
        />

        <TextView
                android:text="Личный кабинет"
                android:fontFamily="Montserrat"
                android:gravity="center"
                style="SemiBold"
                android:layout_gravity="top|center"
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:textColor="@color/TextColorInPLaces"
                android:layout_marginTop="29dp"
                android:layout_height="42dp"
                android:id="@+id/user_profil"
        />

    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_places"
            tools:visibility="invisible"
    >

        <android.support.v7.widget.RecyclerView
                android:id="@+id/placesList"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                tools:listitem="@layout/places_item"
                tools:itemCount="12"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="50dp"
        />

        <SearchView
                android:id="@+id/SearchId"
                android:maxLength="15"
                android:digits="йцукенгшщзхъфывапролджэячсмитьбюЙЦУКЕНГШЩЗХЪФЫВАПРОЛДЖЭЯЧСМИТЬБЮqwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:imeOptions="actionDone"
                android:animateLayoutChanges="true"
        />

    </FrameLayout>

</FrameLayout>