<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".MainActivity" android:id="@+id/main_framelayout">

    <FrameLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/layout_auth"

            android:visibility="visible" >


        <TextView
                android:text="Введите полученный код:"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="@color/TeztColorInPLaces"
                android:layout_gravity="top|center"
                android:fontFamily="PingFang SC"
                android:layout_marginTop="76dp"
                android:layout_width="match_parent"
                android:layout_height="30dp" android:id="@+id/text_suc"/>

        <TextView
                android:text="Не пришло СМС с кодом?
Попробуйте еще раз через минуту"
                android:layout_marginStart="16dp"
                android:textSize="11sp"
                android:gravity="center"
                android:textColor="@color/TeztColorInPLaces"
                android:layout_gravity="top|center"
                android:visibility="invisible"
                android:fontFamily="PingFang SC"
                android:layout_marginTop="213dp"
                android:layout_width="match_parent"
                android:layout_height="34dp" android:id="@+id/text_resend"/>
        <TextView
                android:text="Введите номер телефона:"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:visibility="invisible"
                android:gravity="left"
                android:layout_gravity="top|center"
                android:fontFamily="PingFang SC"
                android:layout_marginTop="76dp"
                android:textColor="@color/TeztColorInPLaces"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/text_vvedite"/>
        <TextView
                android:text="Введите ваше Имя"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:visibility="visible"
                android:gravity="left"
                android:layout_gravity="top|center"
                android:fontFamily="PingFang SC"
                android:layout_marginTop="76dp"
                android:textColor="@color/TeztColorInPLaces"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/text_vvediteNameUser"/>

        <TextView
                android:text="Вход"
                android:layout_marginStart="16dp"
                android:textSize="33sp"
                android:gravity="left"
                android:textColor="@color/TeztColorInPLaces"
                android:layout_gravity="top|center"
                android:fontFamily="PingFang SC"
                android:layout_marginTop="33dp"

                android:layout_width="match_parent"
                android:layout_height="42dp" android:id="@+id/vhod"/>
        <ImageButton
                android:layout_gravity="top|center"
                android:background="@drawable/suc_ico"
                android:layout_marginTop="171dp"
                android:visibility="visible"
                android:layout_width="310dp"
                android:layout_height="44dp" android:id="@+id/buttonSaveNameUser"/>
        <ImageButton
                android:layout_gravity="top|center"
                android:background="@drawable/sign_in_ico"
                android:layout_marginTop="171dp"
                android:visibility="invisible"
                android:layout_width="293dp"
                android:layout_height="44dp" android:id="@+id/buttonVerifyPhone"/>
        <ImageButton
                android:layout_gravity="top|center"
                android:text="снова"
                android:visibility="invisible"
                android:layout_marginTop="260dp"
                android:background="@drawable/resend_ico"
                android:layout_width="255dp"
                android:layout_height="44dp" android:id="@+id/buttonResend"/>

        <ImageButton
                android:layout_gravity="top|center"
                android:background="@drawable/sendcode_ico"
                android:visibility="invisible"
                android:layout_marginTop="171dp"
                android:layout_width="174dp"
                android:layout_height="44dp" android:id="@+id/buttonStartVerification"/>


        <EditText
                android:layout_width="match_parent"
                android:layout_gravity="top|center"
                android:layout_height="44dp"
                android:visibility="visible"
                android:gravity="center"
                android:textColor="@color/TeztColorInPLaces"
                android:background="@drawable/back"
                android:imeOptions="actionDone"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="110dp"
                android:ems="10"
                android:focusable = "true"
                android:maxLength="15"
                android:digits="йцукенгшщзхфывапролджэячсмитьбюЙЦУКЕНГШЩЗХФЫВАПРОЛДЖЭЯЧСМИТЬБЮёЁ "
                android:inputType="textCapSentences|textFilter|textNoSuggestions"
                android:id="@+id/fieldNameUser"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_gravity="top|center"
                android:layout_height="44dp"
                android:visibility="invisible"
                android:gravity="center"
                android:background="@drawable/back"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="110dp"
                android:ems="10"
                android:maxLength="12"
                android:digits="0123456789+"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:id="@+id/fieldPhoneNumber"/>
        <EditText
                android:layout_gravity="top|center"
                android:layout_width="match_parent"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_marginTop="110dp"
                android:layout_marginStart="119dp"
                android:layout_marginEnd="119dp"
                android:background="@drawable/back"
                android:imeOptions="actionDone"
                android:layout_height="36dp"
                android:digits="0123456789"
                android:inputType="phone"
                android:ems="10"
                android:maxLength="6"
                android:id="@+id/fieldVerificationCode"/>

    </FrameLayout>
</FrameLayout>