<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".MainActivity"
        android:id="@+id/favorite_framelayout"
>
    <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="top|center"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:tint="@color/TextColorInPLaces"
            app:srcCompat="@drawable/poloska_dlya_okon"
            android:id="@+id/poloska"
    />
    <TextView
            android:text="Избранные заведения"
            android:textSize="25sp"
            android:layout_marginStart="15dp"
            android:layout_gravity="top|center"
            android:layout_width="wrap_content"
            android:textColor="@color/TextColorInPLaces"
            android:layout_marginTop="23dp"
            android:layout_height="wrap_content"
            android:id="@+id/favorite_title"
    />
    <ImageButton

            android:id="@+id/back_in_useer"
            android:layout_gravity="top|left"
            android:layout_marginTop="31dp"
            android:tint="@color/TextColorInPLaces"
            android:background="@drawable/ico_backk"
            android:layout_width="17dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"

    />
    <TextView
            android:text="У вас пока нет избранных заведений."
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:textColor="@color/TextColorInPLaces"
            android:layout_height="wrap_content"
            android:id="@+id/informm"
    />
    <android.support.v7.widget.RecyclerView
            android:id="@+id/favorite_places_list"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            tools:listitem="@layout/favorite_place_item"
            android:background="@color/colorPrimary"
            android:layout_marginTop="90dp"
    />
</FrameLayout>
