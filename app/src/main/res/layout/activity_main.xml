<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/TeztColorInPLaces"
        tools:context=".MainActivity">


    <android.support.design.widget.BottomNavigationView
            android:id="@+id/Navigationb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/colorNIGHTgrey"
            app:menu="@menu/navigation"
            app:labelVisibilityMode="unlabeled"
            app:itemIconTint="@color/TeztColorInPLaces"
            app:itemTextColor="@color/TeztColorInPLaces"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:visibility="visible" android:id="@+id/layout_user">

        <Button
                android:text="Выход"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/log_out"
                android:layout_marginBottom="20dp"
                android:layout_gravity="bottom|center"

        />
        <Button
                android:text="Изменить"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="right"
        />
        <ImageView
                android:layout_gravity="center|top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_marginTop="50dp"

        />
    </FrameLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/layout_places" android:visibility="invisible">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/placesList"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                tools:listitem="@layout/places_item"
                tools:itemCount="12"

                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="50dp"/>
        <SearchView

                android:id="@+id/SearchId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"

                android:animateLayoutChanges="true"/>

    </FrameLayout>

</FrameLayout>