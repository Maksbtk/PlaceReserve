<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".MainActivity" android:id="@+id/main_framelayout">


    <android.support.design.widget.BottomNavigationView
            android:id="@+id/Navigationb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/colorNIGHTgrey"
            app:itemIconTint="@color/TeztColorInPLaces"
            app:itemTextColor="@color/TeztColorInPLaces"
            app:menu="@menu/navigation"
            android:theme="@style/AppTheme"
            app:labelVisibilityMode="unlabeled"
    >
    </android.support.design.widget.BottomNavigationView>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_user"


            android:visibility="visible">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_sign_out"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="100dp"
                android:layout_gravity="bottom|center"
                 app:srcCompat="@drawable/btn_exit" />
        <com.google.android.gms.common.SignInButton
                android:layout_width="204dp"
                android:layout_height="55dp"
                android:id="@+id/signInBtn"
                android:layout_gravity="center"
        >

        </com.google.android.gms.common.SignInButton>
        <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/change_data"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:tint="@color/TeztColorInPLaces"
                android:background="@color/colorPrimaryDark"
                app:srcCompat="@drawable/edit_ico"

        />


        <TextView
                android:layout_width="377dp"
                android:layout_height="46dp"
                android:id="@+id/nameUser"
                android:textSize="35sp"
                android:textColor="@color/TeztColorInPLaces"
                android:layout_marginTop="200dp"

                android:layout_gravity="top|center"
        />



        <TextView
                android:text="Личный кабинет"
                android:layout_marginEnd="10dp"

                android:gravity="left"
                android:layout_gravity="top|center"
                android:layout_width="match_parent"
                android:textSize="35sp"
                android:textColor="@color/TeztColorInPLaces"
                android:layout_marginTop="13dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:lineHeight="49sp"
                android:id="@+id/user_profil"
        />

    </FrameLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_places"
            android:visibility="invisible">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/placesList"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                tools:listitem="@layout/places_item"
                tools:itemCount="12"

                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="50dp"/>
        <SearchView

                android:id="@+id/SearchId"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:imeOptions="actionDone"
                android:animateLayoutChanges="true"

        />

    </FrameLayout>


</FrameLayout>