<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".MainActivity" android:id="@+id/main_framelayout">


    <android.support.design.widget.BottomNavigationView
            android:id="@+id/Navigationb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/colorNIGHTgrey"
            app:itemIconTint="@color/TeztColorInPLaces"
            app:itemTextColor="@color/TeztColorInPLaces"
            app:menu="@menu/navigation"
            android:theme="@style/AppTheme"
            app:labelVisibilityMode="unlabeled"
            android:visibility="visible">


    </android.support.design.widget.BottomNavigationView>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_user"


    >

        <ImageButton
                android:layout_width="320dp"
                android:layout_height="84dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="220dp"
                app:srcCompat="@drawable/history_btn_ico_for_user"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/HistoryButton"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ico_for_user_layout"
                android:id="@+id/imageView"
                android:tint="@color/TeztColorInPLaces"
                android:layout_gravity="top|center"
                android:layout_marginTop="72dp"
        />
        <ImageButton
                android:layout_width="256dp"
                android:layout_height="54dp"
                android:id="@+id/btn_sign_out"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="150dp"
                android:layout_gravity="bottom|center"
                app:srcCompat="@drawable/btn_exit"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/change_data"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="23dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_gravity="top|end"
                app:srcCompat="@drawable/rename_ico"


        />


        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/nameUser"
                android:textSize="23sp"
                android:fontFamily="PingFang HK"

                android:gravity="center"
                android:textColor="@color/TeztColorInPLaces"
                android:layout_marginTop="119dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/name_bcak_ico"
                android:layout_gravity="top"
                android:textStyle="bold"/>


        <TextView
                android:text="Личный кабинет"
                android:layout_marginEnd="10dp"

                android:gravity="start|top"
                android:layout_gravity="top|center"
                android:layout_width="match_parent"
                android:textSize="33sp"
                android:textColor="@color/TeztColorInPLaces"
                android:layout_marginTop="23dp"
                android:layout_height="42dp"
                android:layout_marginStart="23dp"

                android:id="@+id/user_profil"
        />

    </FrameLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_places"
    >

        <android.support.v7.widget.RecyclerView
                android:id="@+id/placesList"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                tools:listitem="@layout/places_item"
                tools:itemCount="12"

                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="50dp"/>
        <SearchView

                android:id="@+id/SearchId"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:imeOptions="actionDone"
                android:animateLayoutChanges="true"

        />

    </FrameLayout>


</FrameLayout>