<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".MainActivity" android:id="@+id/main_framelayout">




        <EditText
                android:imeOptions="actionDone"
                android:layout_gravity="top|center"
                android:layout_marginTop="230dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="10dp"
                android:text="+7"
                android:ems="10"
                android:textSize="20sp"
                android:textColor="@color/TeztColorInPLaces"
                android:id="@+id/edit_number_user"/>
        <EditText

                android:layout_marginStart="16dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="top|center"
                android:imeOptions="actionDone"
                android:gravity="left"
                android:layout_marginTop="140dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"

                android:textColor="@color/TeztColorInPLaces"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_name_user"/>
        <TextView
                android:text="Редактировать"
                android:layout_marginEnd="10dp"
                android:textSize="35sp"
                android:gravity="left"
                android:layout_gravity="top|center"

                android:layout_width="wrap_content"
                android:textColor="@color/TeztColorInPLaces"
                android:layout_marginTop="13dp"

                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:lineHeight="49sp"
                android:id="@+id/profil"
        />
        <TextView
                android:layout_marginEnd="10dp"
                android:layout_marginTop="110dp"
                android:layout_marginStart="16dp"
                android:text="Введите имя"
                android:textSize="15sp"
                android:gravity="left"
                android:layout_gravity="top|center"
                android:textColor="@color/TeztColorInPLaces"
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/text_enter_name"/>
        <TextView
                android:layout_marginEnd="10dp"
                android:layout_marginTop="200dp"
                android:layout_marginStart="16dp"
                android:text="Введите номер телефона"
                android:textSize="15sp"
                android:gravity="left"
                android:layout_gravity="top|center"
                android:textColor="@color/TeztColorInPLaces"
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/text_enter_number"/>
        <ImageButton
                app:srcCompat="@drawable/ico_ok"
                android:id="@+id/save_userdata"
                android:layout_gravity="top|right"
                android:layout_marginTop="20dp"
                android:tint="@color/TeztColorInPLaces"
                android:background="@color/colorPrimaryDark"
                android:layout_width="42dp"
                android:layout_marginEnd="10dp"
                android:layout_height="42dp"

        />
        <ImageButton
                app:srcCompat="@drawable/ico_backk"
                android:id="@+id/back_in_useer"
                android:layout_gravity="top|left"
                android:layout_marginTop="20dp"
                android:tint="@color/TeztColorInPLaces"
                android:background="@color/colorPrimaryDark"
                android:layout_width="42dp"
                android:layout_marginStart="10dp"
                android:layout_height="42dp"

        />


</FrameLayout>




