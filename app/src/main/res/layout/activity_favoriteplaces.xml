<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".MainActivity" android:id="@+id/favorite_framelayout"
>

    <TextView
            android:text="Избранные заведения"
            android:textSize="30sp"
            android:layout_gravity="top|center"
            android:layout_width="wrap_content"
            android:textColor="@color/TextColorInPLaces"
            android:layout_marginTop="20dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:id="@+id/favorite_title"
    />

    <ImageButton
            app:srcCompat="@drawable/ico_backk"
            android:id="@+id/back_in_useer"
            android:layout_gravity="top|left"
            android:layout_marginTop="20dp"
            android:tint="@color/TextColorInPLaces"
            android:background="@color/colorPrimaryDark"
            android:layout_width="42dp"
            android:layout_marginStart="10dp"
            android:layout_height="42dp"
    />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/favorite_places_list"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            tools:listitem="@layout/favorite_place_item"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="90dp"
    />

</FrameLayout>
