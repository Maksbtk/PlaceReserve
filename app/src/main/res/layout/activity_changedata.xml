<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".MainActivity" android:id="@+id/main_framelayout">

        <ImageView
                android:layout_width="match_parent"
                android:layout_gravity="top|center"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content"
                android:tint="@color/TextColorInPLaces"
                app:srcCompat="@drawable/poloska_dlya_okon"
                android:id="@+id/poloskaa"/>

        <EditText

                android:layout_marginStart="16dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="top|center"
                android:imeOptions="actionDone"
                android:gravity="left"
                android:maxLength="15"
                android:digits="йцукенгшщзхфывапролджэячсмитьбюЙЦУКЕНГШЩЗХФЫВАПРОЛДЖЭЯЧСМИТЬБЮёЁ "
                android:inputType="textCapSentences|textFilter|textNoSuggestions"
                android:layout_marginTop="140dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/TextColorInPLaces"
                android:ems="10"
                android:id="@+id/edit_name_user"/>
        <TextView
                android:text="Редактирование"

                android:textSize="25sp"
                android:gravity="left"
                android:layout_gravity="top|center"
                style="SemiBold"
                android:layout_width="wrap_content"
                android:textColor="@color/TextColorInPLaces"
                android:layout_marginTop="30dp"
                android:fontFamily="Montserrat"
                android:layout_height="42dp"

                android:lineHeight="49sp"
                android:id="@+id/profil"
        />
        <TextView
                android:layout_marginEnd="10dp"
                android:layout_marginTop="110dp"
                android:layout_marginStart="16dp"
                android:text="Введите имя"
                android:textSize="15sp"
                android:gravity="left"
                android:layout_gravity="top|center"
                android:textColor="@color/TextColorInPLaces"
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/text_enter_name"/>
        <ImageButton

                android:id="@+id/save_userdata"
                android:layout_gravity="top|right"
                android:layout_marginTop="40dp"
                android:tint="@color/TextColorInPLaces"
                android:background="@drawable/ico_ok"
                android:layout_width="22dp"
                android:layout_marginEnd="14dp"
                android:layout_height="18dp"

        />
        <ImageButton

                android:id="@+id/back_in_useer"
                android:layout_gravity="top|left"
                android:layout_marginTop="38dp"
                android:tint="@color/TextColorInPLaces"
                android:background="@drawable/ico_backk"
                android:layout_width="13dp"
                android:layout_marginStart="22dp"
                android:layout_height="20dp"

        />


</FrameLayout>




